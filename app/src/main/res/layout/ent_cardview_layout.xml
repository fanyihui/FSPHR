<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="@color/cardviewBackgroundLight"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:id="@+id/id_ent_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_ent_admit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="20160725"
            android:textSize="@dimen/small_font_size"/>

        <TextView
            android:id="@+id/id_ent_date_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:visibility="gone"
            android:layout_toRightOf="@id/id_ent_admit_date"/>

        <TextView
            android:id="@+id/id_ent_discharge_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_toRightOf="@id/id_ent_date_dash"
            android:text="20160727"
            android:visibility="gone"
            android:textSize="@dimen/small_font_size"/>

        <TextView
            android:id="@+id/id_ent_patient_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:textSize="@dimen/small_font_size"
            android:text="门诊"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_line"
            android:layout_below="@+id/id_ent_admit_date"/>

        <TextView
            android:id="@+id/id_ent_diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@+id/id_ent_admit_date"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/hightlight"
            android:text="心悸"/>

        <TextView
            android:id="@+id/id_ent_dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/id_ent_diagnosis"
            android:layout_below="@+id/id_ent_admit_date"
            android:text="心内科"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/id_ent_org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@+id/id_ent_dept"
            android:textSize="@dimen/small_font_size"
            android:text="上海复旦大学附属中山医院"/>

        <LinearLayout
            android:id="@+id/id_ent_section_physician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/id_ent_dept"
            android:padding="3dp">

            <TextView
                android:id="@+id/id_ent_label_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/small_font_size"
                android:text="@string/label_physician"/>

            <TextView
                android:id="@+id/id_ent_attending_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_font_size"
                android:text="范益辉"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>