<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_problem_description_edit"
    tools:context="com.fansen.phr.activities.ProblemDescriptionEditActivity">

    <TextView
        android:id="@+id/id_pd_label_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="此处用来描述当前疾病的发展过程，比如什么时候开始，有些什么样的症状，什么情况下会加剧，什么情况下会缓解等。"/>

    <EditText
        android:id="@+id/id_problems_desc_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/id_pd_label_tips"
        android:gravity="top"
        android:hint="描述病情发展过程"/>

</RelativeLayout>
