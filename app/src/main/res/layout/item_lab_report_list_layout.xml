<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/id_lab_report_list_cardview_image_view"
            android:layout_width="@dimen/grid_view_column_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:src="@drawable/ic_skeleton"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_lab_report_list_cardview_image_view">

            <TextView
                android:id="@+id/id_lab_report_list_cardview_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="肝功能四项（静脉血）"/>

            <TextView
                android:id="@+id/id_lab_report_list_cardview_specimen_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_lab_report_list_cardview_order"
                android:text="@string/label_lab_report_specimen"/>

            <TextView
                android:id="@+id/id_lab_report_list_cardview_specimen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/id_lab_report_list_cardview_order"
                android:layout_toRightOf="@+id/id_lab_report_list_cardview_specimen_label"
                android:text="静脉血"/>

            <TextView
                android:id="@+id/id_lab_report_list_cardview_reporting_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_lab_report_list_cardview_specimen"
                android:text="20151126"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>