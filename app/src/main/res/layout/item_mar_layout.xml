<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_mar_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardviewBackgroundLight"
    android:layout_below="@+id/id_latest_ent_seperate"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_mar_med_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿司匹林肠溶片"
            android:textSize="@dimen/font_size_big"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/id_mar_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="每次一粒"
            android:textSize="@dimen/font_size_big"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_mar_med_name"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已服用"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推迟服用"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忽略"/>
        </RadioGroup>
    </RelativeLayout>
</android.support.v7.widget.CardView>